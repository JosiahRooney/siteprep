@import 'colors.styl'
@import 'fonts.styl'

.overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0,0,0,.2)

.stripes
  background repeating-linear-gradient(
    45deg,
    $primary,
    $primary 10px,
    rgba(0,0,0,0) 10px,
    rgba(0,0,0,0) 20px
  )
  box-shadow inset 0 5px 9px -2px rgba(0,0,0,.4)